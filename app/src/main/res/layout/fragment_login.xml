<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".view.fragments.LoginFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/loginFragmentImageView"
        android:layout_width="600dp"
        android:layout_height="300dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="50dp"
        android:background="#88000000"></ImageView>

    <EditText
        android:id="@+id/loginFragmentEditTextNamaUser"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/loginFragmentImageView"
        android:layout_alignTop="@+id/loginFragmentImageView"
        android:layout_alignEnd="@+id/loginFragmentImageView"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="300dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/edittext_rounded_corner"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:singleLine="true"
        android:hint="Nama User"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/loginFragmentEditTextPassword"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_below="@+id/loginFragmentEditTextNamaUser"
        android:layout_alignStart="@+id/loginFragmentImageView"
        android:layout_alignEnd="@+id/loginFragmentImageView"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-80dp"
        android:layout_marginRight="300dp"
        android:background="@drawable/edittext_rounded_corner"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:singleLine="true"
        android:hint="Password"
        android:textSize="18sp" />

    <Button
        android:id="@+id/loginFragmentButtonMasuk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginFragmentEditTextPassword"
        android:layout_alignStart="@+id/loginFragmentImageView"
        android:layout_alignEnd="@+id/loginFragmentImageView"
        android:layout_alignBottom="@+id/loginFragmentEditTextPassword"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="300dp"
        android:layout_marginBottom="-70dp"
        android:backgroundTint="@color/green"
        android:text="Masuk"
        android:textColor="@color/black" />

</RelativeLayout>